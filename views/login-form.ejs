<form class="flex w-full justify-center pt-16 px-8" action="/login" method="post">
      <div class="flex flex-col items-center gap-1 rounded-md bg-slate-100 w-md p-8 border-2 border-slate-200 shadow-md ">
        <h1 class="text-2xl">Login</h1>
        <% if (loginErrorMsg) { %>
            <p class="pt-4 text-red-500">Incorrect email/password</p>
        <% } %>
        <div class="flex flex-col gap-1 pt-4 w-full">
          <label for="email">Email</label>
          <input
            class="rounded-sm border border-slate-600 px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2"
            type="email"
            name="email"
            id="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="flex flex-col gap-1 pt-4 w-full">
          <label for="password">Password</label>
          <input
            class="border-slate-600 rounded-sm border px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2"
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            required
          />
        </div>
        <button class="mt-8 rounded-sm bg-blue-500 px-4 py-2 font-bold text-white hover:cursor-pointer hover:bg-blue-600 w-full" type="submit">Log in</button>
        <p class="pt-8 text-center">Don't have an account? <a class="font-bold text-blue-500 hover:underline" href="/register">Register</a></p>
      </div>
  </div>
</form>
