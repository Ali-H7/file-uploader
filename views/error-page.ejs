<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>404 Page Not Found</title>
  </head>
  <body>
    <%- include ('header') %>
    <div class="error-container flex justify-center px-4 py-16">
      <div class="error space-y-2 border border-red-500 bg-red-100 p-4 text-center text-lg">
        <h1 class="font-bold"><%=error ?? '404 - Page Not Found'%></h1>
        <h3 class="error-timer">You will be directed to the homepage in 10 seconds</h3>
        <a class="error-back" href="/"><span class="font-bold">Back to Homepage</span></a>
      </div>
    </div>

    <script>
      let count = 9;
      const timerElement = document.querySelector('.error-timer');
      const timer = setInterval(() => {
        timerElement.textContent = `You will be directed to the homepage in ${count} seconds`;
        count--;

        if (count < 0) {
          clearInterval(timer);
          window.location.replace('/');
        }
      }, 1000);
    </script>
  </body>
</html>
