<form class="flex w-full justify-center pt-16 px-8" action="/register" method="post">
      <div class="flex flex-col items-center gap-1 rounded-md bg-slate-100 w-md p-8 border-2 border-slate-200 shadow-md ">
        <h1 class="text-2xl">Register</h1>
        <% if (errors.length > 0){ %>
          <ul class="pt-3 px-4 text-red-500 list-disc text-sm w-full">
            <% errors.forEach((err)=> { %>
              <li class="pt-1"><%=err.msg%></li>
            <% }) %>
          </ul>
        <% } %> 
            <div class="flex flex-col sm:flex-row gap-4 w-full">
                <div class="flex flex-col w-full">
                    <label for="firstName">First Name</label>
                    <input
                    class="rounded-sm border border-slate-600 px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2 w-full"
                    type="text"
                    name="firstName"
                    id="firstName"
                    placeholder="Ali"
                    value="<%=userInput.firstName ?? ''%>"
                    required
                              />
                </div>
                <div class="flex flex-col w-full">
                    <label for="lastName">Last Name</label>
                    <input
                    class="rounded-sm border border-slate-600 px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2 w-full"
                    type="text"
                    name="lastName"
                    id="lastName"
                    placeholder="Hasan"
                    value="<%=userInput.lastName ?? ''%>"
                    required
                              />
                </div>
            </div>
        <div class= "flex flex-col gap-1 pt-4 w-full">
              <label for="email">Email</label>
              <input
                class="rounded-sm border border-slate-600 px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2"
                type="email"
                name="email"
                id="email"
                placeholder="Enter your email"
                value="<%=userInput.email ?? ''%>"
                required
              />
          </div>
        <div class="flex flex-col gap-1 pt-4 w-full">
          <label for="password">Password</label>
          <input
            class="border-slate-600 rounded-sm border px-1 py-2 focus:border-blue-500 focus:outline-none focus:border-2"
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            required
          />
        </div>
        <button class="mt-8 rounded-sm bg-blue-500 px-4 py-2 font-bold text-white hover:cursor-pointer hover:bg-blue-600 w-full" type="submit">Register</button>
        <p class="pt-8 text-center">Already have an account? <a class="font-bold text-blue-500 hover:underline" href="/login">Login</a></p>
      </div>
  </div>
</form>
