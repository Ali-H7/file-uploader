<div class="flex justify-center">
  <div class="flex w-full max-w-xl flex-col items-center">
    <h2 class="mb-4 text-xl font-bold">My Folders</h2>
    <div class="flex flex-wrap justify-center">
      <% folders.forEach((folder)=> { %>
      <a href="/folder/<%=folder.id%>">
        <div
          class="flex h-30 w-30 flex-col items-center justify-center hover:cursor-pointer hover:border hover:border-blue-500 hover:bg-blue-100"
        >
          <svg xmlns="http://www.w3.org/2000/svg" height="48px" viewBox="0 -960 960 960" width="48px" fill="#000000">
            <path
              d="M140-160q-24 0-42-18.5T80-220v-520q0-23 18-41.5t42-18.5h281l60 60h339q23 0 41.5 18.5T880-680v460q0 23-18.5 41.5T820-160H140Zm0-60h680v-460H456l-60-60H140v520Zm0 0v-520 520Z"
            />
          </svg>
          <p class="w-full text-center"><%=folder.folderName%></p>
        </div>
      </a>
      <%}) %>
    </div>
  </div>
</div>
