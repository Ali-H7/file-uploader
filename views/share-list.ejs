<div class="flex justify-center">
  <% if (shares.length == 0) { %> <%- include('warning', { text: "You haven't shared any files yet" }) %> <% } else { %>
  <div class="w-2xl p-8">
    <h1 class="text-center text-xl font-bold">My Shares</h1>
    <div class="pt-4">
      <% shares.forEach((share, i)=> { %>
      <div
        class="<%=i % 2 !== 0 ? 'bg-slate-100' : 'bg-slate-200'%> flex w-full justify-between gap-4 border-2 border-slate-200 p-2 shadow-md"
      >
        <a class="w-2/4 font-bold text-blue-500 hover:underline" href="/shared-file/<%=share.id%>">
          <p class="truncate"><%=share.file.fileName%></p>
        </a>
        <p class="w-1/4"><%=share.file.fileSize%></p>
        <p class="w-1/4"><%=share.status ? `Expires ${share.status}`: 'Expired' %></p>
      </div>
      <% }) %>
    </div>
  </div>
  <%} %>
</div>
