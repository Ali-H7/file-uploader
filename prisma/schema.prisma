generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  firstName    String         @map("first_name") @db.VarChar(50)
  lastName     String         @map("last_name") @db.VarChar(50)
  password     String         @db.Char(60)
  files        File[]
  fileShares   FileShares[]
  folders      Folder[]
  folderShares FolderShares[]

  @@map("user")
}

model File {
  id           Int         @id @default(autoincrement())
  fileName     String      @map("file_name") @db.VarChar(255)
  cloudinaryId String      @map("cloudinary_id") @db.VarChar(255)
  fileType     String      @map("file_type") @db.VarChar(50)
  fileSize     Int         @map("file_size")
  filePath     String      @map("file_path") @db.VarChar(255)
  uploadDate   DateTime    @default(now()) @map("upload_date")
  userId       Int         @map("user_id")
  user         User        @relation(fields: [userId], references: [id])
  fileShares   FileShares?
  folders      Folder[]

  @@map("file")
}

model FileShares {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  user       User     @relation(fields: [userId], references: [id])
  fileId     Int      @unique @map("file_id")
  file       File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  validUntil DateTime @map("valid_until")
  shareDate  DateTime @default(now()) @map("share_date")

  @@map("file_shares")
}

model Folder {
  id           Int            @id @default(autoincrement())
  folderName   String         @map("folder_name") @db.VarChar(255)
  createDate   DateTime       @default(now()) @map("create_date")
  userId       Int            @map("user_id")
  user         User           @relation(fields: [userId], references: [id])
  folderShares FolderShares[]
  files        File[]

  @@map("folder")
}

model FolderShares {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  user       User     @relation(fields: [userId], references: [id])
  folderId   Int      @map("folder_id")
  folder     Folder   @relation(fields: [folderId], references: [id])
  validUntil DateTime @map("valid_until")
  shareDate  DateTime @default(now()) @map("share_date")

  @@map("folder_shares")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime

  @@map("session")
}
