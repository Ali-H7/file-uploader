generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  firstName  String  @db.VarChar(50) @map("first_name")
  lastName  String  @db.VarChar(50) @map("last_name")
  password  String  @db.Char(60)
  files  File[]
}

model File {
  id    Int     @id @default(autoincrement())
  fileName String  @db.VarChar(255) @map("file_name")
  fileSize String  @db.VarChar(255) @map("file_size")
  uplodaDate  DateTime @default(now()) @map("upload_date")
  user    User    @relation(fields: [userId], references: [id])
  userId  Int  @map("user_id")
}

